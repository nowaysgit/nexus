# Основные настройки приложения
NODE_ENV=development
PORT=3000
LOG_LEVEL=info
# SENTRY_DSN=https://your-sentry-dsn

# База данных
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=postgres
DATABASE_NAME=nexus
DATABASE_SYNCHRONIZE=false
DATABASE_LOGGING=false

# OpenAI API
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4o
OPENAI_DEFAULT_TEMPERATURE=0.7
OPENAI_MAX_RESPONSE_TOKENS=500
OPENAI_SYSTEM_TEMPERATURE=0.3
OPENAI_ANALYSIS_MODEL=gpt-4o

# Telegram
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
# TELEGRAM_WEBHOOK_URL=https://your-webhook-url
TELEGRAM_ADMIN_IDS=12345,67890
TELEGRAM_MAX_MESSAGE_LENGTH=4096
TELEGRAM_RESPONSE_TIMEOUT=10000

# Настройки персонажей
CHARACTER_BEHAVIOR_CYCLE_INTERVAL=300000
CHARACTER_NEEDS_UPDATE_INTERVAL=60000
CHARACTER_MOTIVATION_CHECK_INTERVAL=600000
CHARACTER_NEEDS_DEFAULT_GROWTH_RATE=5
CHARACTER_NEEDS_MAX_VALUE=100
CHARACTER_MOTIVATION_THRESHOLD=70
CHARACTER_ACTION_CHANCE=0.4
CHARACTER_DEFAULT_ACTION_DURATION=1800000
CHARACTER_PROACTIVE_MESSAGE_INTERVAL=21600000
CHARACTER_MAX_MEMORY_COUNT=100
CHARACTER_DEFAULT_MEMORY_IMPORTANCE=5
CHARACTER_MEMORY_RETENTION_TIME=2592000000
CHARACTER_DEFAULT_ARCHETYPE=gentle
CHARACTER_DEFAULT_AGE_MIN=25
CHARACTER_DEFAULT_AGE_MAX=35 