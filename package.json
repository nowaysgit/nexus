{
  "name": "nexus",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "build:prod": "nest build --webpack",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "start:prod:pm2": "pm2 start dist/main.js --name nexus-api",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint:check": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "test": "jest --config ./jest.combined.config.js",
    "test:watch": "jest --watch --config ./jest.combined.config.js",
    "test:cov": "jest --coverage --config ./jest.combined.config.js",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:all": "docker compose -f docker-compose.test.yml up -d postgres-test && POSTGRES_HOST=localhost DB_TEST_HOST=localhost DB_TEST_PORT=5433 jest --config ./jest.combined.config.js",
    "test:all:combined": "jest --config ./jest.combined.config.js",
    "test:unit": "jest --config ./jest.config.js --maxWorkers=4",
    "test:integration": "POSTGRES_HOST=nexus-test-postgres DB_TEST_HOST=nexus-test-postgres DB_TEST_PORT=5432 jest --config ./jest.integration.config.js --maxWorkers=1",
    "docker:build": "docker build -t nexus:latest .",
    "docker:build:prod": "docker build --target production -t nexus:production .",
    "docker:run": "docker run -p 3000:3000 nexus:latest",
    "docker:run:prod": "docker run -p 3000:3000 nexus:production",
    "docker:compose:up": "docker compose up -d",
    "docker:compose:down": "docker compose down",
    "docker:compose:prod": "docker compose -f docker-compose.prod.yml up -d",
    "health:check": "curl -f http://localhost:3000/health || exit 1",
    "db:test:up": "docker compose -f docker-compose.test.yml up -d",
    "db:test:down": "docker compose -f docker-compose.test.yml down -v",
    "db:test:logs": "docker compose -f docker-compose.test.yml logs -f",
    "db:test:status": "docker compose -f docker-compose.test.yml ps",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "migration:create": "yarn typeorm migration:create -n",
    "migration:generate": "yarn typeorm migration:generate -n",
    "migration:run": "yarn typeorm migration:run",
    "migration:revert": "yarn typeorm migration:revert",
    "prepare": "husky install",
    "fix:lf": "eslint --fix \"{src,apps,libs}/**/*.ts\" && prettier --write \"{src,apps,libs}/**/*.ts\"",
    "analyze-test-performance": "node scripts/analyze-test-performance.js",
    "llm:setup": "./scripts/setup-llm.sh",
    "llm:start": "docker compose -f docker-compose.llm.yml up -d",
    "llm:stop": "docker compose -f docker-compose.llm.yml down",
    "llm:restart": "yarn llm:stop && yarn llm:start",
    "llm:logs": "docker compose -f docker-compose.llm.yml logs -f",
    "llm:status": "docker compose -f docker-compose.llm.yml ps",
    "llm:models": "./scripts/download-models.sh list",
    "llm:models:dev": "./scripts/download-models.sh dev",
    "llm:models:test": "./scripts/download-models.sh test",
    "llm:models:prod": "./scripts/download-models.sh prod",
    "llm:test": "yarn test:integration test/integration/llm",
    "llm:ui": "docker compose -f docker-compose.llm.yml --profile dev up ollama-webui"
  },
  "dependencies": {
    "@kubernetes/client-node": "^1.1.2",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/event-emitter": "^3.0.1",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/schedule": "^6.0.0",
    "@nestjs/swagger": "^11.1.6",
    "@nestjs/typeorm": "^11.0.0",
    "axios": "^1.9.0",
    "bcrypt": "^5.1.1",
    "chokidar": "^4.0.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "dotenv": "^16.5.0",
    "glob": "^11.0.3",
    "ioredis": "^5.6.1",
    "joi": "^17.13.3",
    "lz-string": "^1.5.0",
    "nest-winston": "^1.10.2",
    "nestjs-telegraf": "^2.9.1",
    "openai": "^4.28.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^7.18.2",
    "prom-client": "^15.1.3",
    "reflect-metadata": "^0.2.2",
    "rollbar": "^2.26.4",
    "rxjs": "^7.8.1",
    "telegraf": "^4.16.3",
    "typeorm": "^0.3.24",
    "uuid": "^11.1.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "@types/passport-jwt": "^4.0.1",
    "@types/pg": "^8.15.4",
    "@types/supertest": "^6.0.3",
    "better-sqlite3": "^11.10.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-formatter-compact": "^8.40.0",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.5.1",
    "prettier": "^3.5.3",
    "source-map-support": "^0.5.21",
    "sqlite3": "^5.1.7",
    "supertest": "^7.1.1",
    "ts-jest": "^29.3.4",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^4.9.5",
    "typescript-eslint": "^8.20.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}