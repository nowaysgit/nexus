# Environment конфигурация для тестирования LLM
# Используется для integration и E2E тестов

# LLM Configuration для тестов
LLM_ACTIVE_PROVIDER=llama
LLM_FALLBACK_ENABLED=false
LLM_RETRY_ATTEMPTS=1
LLM_TIMEOUT=30000
LLM_CACHE_ENABLED=false

# Llama Light для быстрых тестов
LLM_LLAMA_ENABLED=true
LLM_LLAMA_PRIORITY=1
LLM_LLAMA_ENDPOINT=http://localhost:11435
LLM_LLAMA_API_KEY=
LLM_LLAMA_MODEL=llama3.2:1b
LLM_LLAMA_TIMEOUT=30000

# Отключаем внешние провайдеры в тестах
LLM_OPENAI_ENABLED=false
LLM_CLAUDE_ENABLED=false
LLM_GEMINI_ENABLED=false

# Redis для тестов
REDIS_LLM_HOST=localhost
REDIS_LLM_PORT=6381
REDIS_LLM_PASSWORD=
REDIS_LLM_DB=2

# Минимальное логирование для тестов
LLM_MONITORING_ENABLED=false
LLM_LOGGING_ENABLED=false
LLM_LOG_REQUESTS=false
LLM_LOG_RESPONSES=false

# Настройки для быстрых тестов
TEST_LLM_MAX_TOKENS=50
TEST_LLM_TEMPERATURE=0
TEST_LLM_TIMEOUT=15000
