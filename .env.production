# Основные настройки приложения - PRODUCTION
NODE_ENV=production
PORT=3000
LOG_LEVEL=warn
APP_ENCRYPTION_KEY=YOUR_SECURE_PRODUCTION_ENCRYPTION_KEY

# Настройки базы данных PostgreSQL - PRODUCTION
DB_HOST=postgres
DB_PORT=5432
DB_USERNAME=nexus_prod
DB_PASSWORD=YOUR_SECURE_PRODUCTION_DB_PASSWORD
DB_DATABASE=nexus_production
DB_SYNCHRONIZE=false

# Настройки Telegram Bot - PRODUCTION
TELEGRAM_BOT_TOKEN=YOUR_PRODUCTION_TELEGRAM_BOT_TOKEN
TELEGRAM_ADMIN_IDS=YOUR_ADMIN_USER_IDS

# Настройки OpenAI API - PRODUCTION
OPENAI_API_KEY=YOUR_PRODUCTION_OPENAI_API_KEY
OPENAI_MODEL=gpt-4o

# Настройки LLM системы - PRODUCTION
LLM_ACTIVE_PROVIDER=llama
LLM_FALLBACK_ENABLED=true
LLM_CACHE_ENABLED=true

# Настройки Llama/Ollama провайдера - PRODUCTION
LLM_LLAMA_ENABLED=true
OLLAMA_BASE_URL=http://ollama:11434
LLM_LLAMA_API_KEY=
LLM_LLAMA_MODEL=llama3.2:3b

# Настройки OpenAI провайдера - PRODUCTION
LLM_OPENAI_ENABLED=true

# Административные настройки - PRODUCTION
ADMIN_API_KEY=YOUR_SECURE_PRODUCTION_ADMIN_API_KEY

# CORS настройки - PRODUCTION
CORS_ORIGIN=https://yourdomain.com
